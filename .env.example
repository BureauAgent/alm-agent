# ===========================================
# Режим работы бота
# ===========================================
# twitter - для работы с Twitter
# web - для запуска веб-сервера с чатом
BOT_MODE=web


# ===========================================
# Настройки AI модели
# ===========================================
# Провайдер: ollama (локальный), openai, local (демо)
AI_PROVIDER=ollama

# Название модели
# Для Ollama: llama2, mistral, codellama, phi и др.
# Для OpenAI: gpt-3.5-turbo, gpt-4 и др.
AI_MODEL_NAME=llama2

# OpenAI API ключ (только для AI_PROVIDER=openai)
# OPENAI_API_KEY=sk-...

# URL для Ollama (если не localhost)
OLLAMA_BASE_URL=http://localhost:11434

# Температура генерации (0.0 - 1.0)
# Меньше = более предсказуемо, больше = более креативно
AI_TEMPERATURE=0.7

# Максимальное количество токенов в ответе
AI_MAX_TOKENS=500


# ===========================================
# Настройки Twitter (для BOT_MODE=twitter)
# ===========================================
# Получите ключи на https://developer.twitter.com
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret

# Автоматически отвечать на упоминания
TWITTER_AUTO_REPLY=true
TWITTER_REPLY_MENTIONS=true


# ===========================================
# Настройки веб-сервера (для BOT_MODE=web)
# ===========================================
# Порт для веб-сервера
WEB_PORT=3000

# API ключ для защиты эндпоинтов (необязательно)
# WEB_API_KEY=your_secret_api_key

# Включить CORS
WEB_ENABLE_CORS=true